@model EstaApplyViewModel
@{
    ViewData["Title"] = "Apply";
}

<h1>Apply</h1>

<form class="form-horizontal" asp-action="Process" asp-controller="Esta" method="post">

    @if(!ViewData.ModelState.IsValid)
    {   
        <div asp-validation-summary="All" class="toast toast-error">
        </div>
    }
    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="ArrivalDate"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="ArrivalDate">
            <span class="form-input-hint text-error" asp-validation-for="ArrivalDate"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Email"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="Email">
            <span class="form-input-hint text-error" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="PhoneNumber"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="PhoneNumber">
            <span class="form-input-hint text-error" asp-validation-for="PhoneNumber"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="PostalCode"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="PostalCode">
            <span class="form-input-hint text-error" asp-validation-for="PostalCode"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Address"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="Address">
            <span class="form-input-hint text-error" asp-validation-for="Address"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="City"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="City">
            <span class="form-input-hint text-error" asp-validation-for="City"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Province"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="Province">
            <span class="form-input-hint text-error" asp-validation-for="Province"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Country"></label>
        </div>
        <div class="col-9 col-sm-12">
            <select class="form-select" asp-for="Country" asp-items="@Model.Countries"></select>
            <span class="form-input-hint text-error" asp-validation-for="Country"></span>
        </div>
    </div> 
    
    <div class="form-group">
        <div class="col-9 col-sm-12 col-ml-auto">
            <label class="form-checkbox">
                <input asp-for="ReceiveByMail"><i class="form-icon"></i> Indien gewenst...
            </label>
            <span class="form-input-hint text-error" asp-validation-for="ReceiveByMail"></span>
        </div>
    </div>

    <button class="btn" type="submit">Verzenden</button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

