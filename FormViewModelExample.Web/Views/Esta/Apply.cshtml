@model EstaApplyViewModel
@{
    ViewData["Title"] = "Apply";
}

<h1>Apply</h1>

<form class="form-horizontal">
    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="ArrivalDate"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="ArrivalDate">
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Email"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="Email">
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="PhoneNumber"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="PhoneNumber">
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="PostalCode"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="PostalCode">
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Address"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="Address">
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="City"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="City">
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Province"></label>
        </div>
        <div class="col-9 col-sm-12">
            <input class="form-input" asp-for="Province">
        </div>
    </div>

    <div class="form-group">
        <div class="col-3 col-sm-12">
            <label class="form-label" asp-for="Country"></label>
        </div>
        <div class="col-9 col-sm-12">
            <select class="form-select" asp-for="Country" asp-items="@Model.Countries"></select>
        </div>
    </div> 
    
    <div class="form-group">
        <div class="col-9 col-sm-12 col-ml-auto">
            <label class="form-checkbox">
                <input asp-for="ReceiveByMail"><i class="form-icon"></i> Indien gewenst...
            </label>
        </div>
       
    </div>

</form>

